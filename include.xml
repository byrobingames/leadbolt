<?xml version="1.0" encoding="utf-8"?>
<extension>
	<section if="android">
        <classpath name="src" />
		
		<dependency name="leadbolt" path="dependencies/leadbolt" if="android" />
        
        <android extension="com.byrobin.leadbolt.LeadboltEx" />
	</section>
	<section if="ios">
		<ndll name="leadbolt" />
        
        <echo value='|----------------------------------------------------------------------------|' />
        <echo value='| Leadbolt: Enable byRobin Extension manager in "Setting->Extension"         |' />
        <echo value='|----------------------------------------------------------------------------|' />
        
        <dependency name="frameworks/libAppTracker.a" />
        <template path="frameworks/libAppTracker.a" rename="lib/arm64/libAppTracker.a" />
        <template path="frameworks/libAppTracker.a" rename="lib/armv7/libAppTracker.a" />
        <template path="frameworks/libAppTracker.a" rename="lib/i386/libAppTracker.a" />
        <template path="frameworks/libAppTracker.a" rename="lib/x86_64/libAppTracker.a" />
        
	</section>
</extension>
